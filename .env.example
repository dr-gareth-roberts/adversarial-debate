# Adversarial Debate - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider Configuration
# =============================================================================

# Provider to use (anthropic, mock)
LLM_PROVIDER=anthropic

# API Keys (set the one for your provider)
ANTHROPIC_API_KEY=sk-ant-...

# Note: mock provider does not require an API key.

# Model override (optional - uses sensible defaults)
# LLM_MODEL=claude-sonnet-4-20250514

# Request timeout in seconds
# LLM_TIMEOUT=120

# =============================================================================
# Application Configuration
# =============================================================================

# Enable debug mode (verbose logging)
# ADVERSARIAL_DEBUG=false

# Dry run mode (no actual API calls)
# ADVERSARIAL_DRY_RUN=false

# Output directory for results
# ADVERSARIAL_OUTPUT_DIR=./output

# Bead ledger location
# ADVERSARIAL_BEAD_LEDGER=./beads/ledger.jsonl

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
# ADVERSARIAL_LOG_LEVEL=INFO

# Log format (text, json)
# ADVERSARIAL_LOG_FORMAT=text
