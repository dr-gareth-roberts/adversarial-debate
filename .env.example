# Adversarial Debate - Environment Configuration
# Copy this file to .env and fill in your values
#
# Usage: cp .env.example .env && nano .env

# =============================================================================
# LLM Provider Selection
# =============================================================================
# Available providers: anthropic, openai, azure, ollama, mock
LLM_PROVIDER=anthropic

# =============================================================================
# Anthropic Configuration (Default Provider)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-...
# ANTHROPIC_MODEL=claude-sonnet-4-20250514  # Optional model override

# =============================================================================
# OpenAI Configuration
# =============================================================================
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o
# OPENAI_BASE_URL=https://api.openai.com/v1  # Custom endpoint

# =============================================================================
# Azure OpenAI Configuration
# =============================================================================
AZURE_OPENAI_API_KEY=your-azure-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-01

# =============================================================================
# Ollama Configuration (Local LLM - No API Key Required)
# =============================================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
# Alternative models: codellama, mistral, mixtral, deepseek-coder

# =============================================================================
# Sandbox Configuration (CRITICAL FOR SECURITY)
# =============================================================================
# Enable sandboxed code execution (HIGHLY RECOMMENDED)
SANDBOX_ENABLED=true

# Use Docker for sandbox isolation (most secure)
SANDBOX_USE_DOCKER=true

# Sandbox resource limits
SANDBOX_MEMORY_LIMIT=256m
SANDBOX_CPU_LIMIT=0.5
SANDBOX_TIMEOUT_SECONDS=30
SANDBOX_TEMP_SIZE=64m

# Network policy for sandbox (disable for maximum security)
SANDBOX_NETWORK_ENABLED=false

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=human
# Log formats: human, json

# =============================================================================
# Debate Configuration
# =============================================================================
# Time budget for full debate (seconds)
TIME_BUDGET=300

# Number of parallel agents
PARALLEL_AGENTS=3

# Agent for watch mode
WATCH_AGENT=all
# Options: exploit, break, chaos, all

# =============================================================================
# Output Configuration
# =============================================================================
# Output directory for results
ADVERSARIAL_OUTPUT_DIR=./output

# Bead ledger location (event store)
ADVERSARIAL_BEAD_LEDGER=./beads/ledger.jsonl

# Output format: json, sarif, html, markdown
OUTPUT_FORMAT=json

# =============================================================================
# Cache Configuration
# =============================================================================
# Cache directory for incremental analysis
CACHE_DIR=./.adversarial-cache

# Cache TTL in seconds (0 = never expire)
CACHE_TTL=3600

# =============================================================================
# Docker-specific (for docker-compose)
# =============================================================================
# Path to target code for analysis (used in sandbox mode)
TARGET_CODE_PATH=./src
