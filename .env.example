# Adversarial Debate - Environment Configuration
# Copy this file to .env and fill in your values
#
# Usage: cp .env.example .env && nano .env

# =============================================================================
# LLM Provider Selection
# =============================================================================
# Available providers: anthropic, openai, azure, ollama, mock
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-20250514
LLM_TIMEOUT=120

# =============================================================================
# Provider API Keys
# =============================================================================
# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI
OPENAI_API_KEY=sk-...

# Azure OpenAI
AZURE_OPENAI_API_KEY=your-azure-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-02-01

# Ollama (local LLM - no API key required)
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Logging Configuration
# =============================================================================
ADVERSARIAL_LOG_LEVEL=INFO
ADVERSARIAL_LOG_FORMAT=text
# Log formats: text, json

# =============================================================================
# Output Configuration
# =============================================================================
# Output directory for results
ADVERSARIAL_OUTPUT_DIR=./output

# Bead ledger location (event store)
ADVERSARIAL_BEAD_LEDGER=./beads/ledger.jsonl

# =============================================================================
# Optional app flags
# =============================================================================
ADVERSARIAL_DEBUG=false
ADVERSARIAL_DRY_RUN=false

# =============================================================================
# Docker Compose helpers
# =============================================================================
# Agent for watch mode
WATCH_AGENT=all

# Path to target code for analysis
TARGET_CODE_PATH=./src
